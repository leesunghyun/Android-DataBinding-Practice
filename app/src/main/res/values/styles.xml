<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor</item>
        <item name="android:textSize">20sp</item>
        <item name="met_baseColor">@android:color/black</item>
        <item name="met_floatingLabel">highlight</item>
        <item name="met_primaryColor">@color/colorAccent</item>
        <item name="met_singleLineEllipsis">true</item>
    </style>

</resources>
